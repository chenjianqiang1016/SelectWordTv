<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_layout"
        tools:context=".MainActivity">

    <TextView
            android:background="#55ffff"
            android:gravity="center"
            android:textSize="15dp"
            android:text="这是标题栏 高度40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    <ScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#55ff00ff"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#55ff0000"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#5500ff00"
            />


            <com.demo.selectwordtv.mySelectWord.SelectWordView
                    android:id="@+id/selectWord_1"
                    android:textSize="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#55ffff00"
            />

            <com.demo.selectwordtv.mySelectWord.SelectWordView
                    android:id="@+id/selectWord_2"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#55ff0000"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#5500ff00"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#55ff0000"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#5500ff00"
            />

        </LinearLayout>


    </ScrollView>


</LinearLayout>